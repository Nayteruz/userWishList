{% extends 'base.html.twig' %}

{% if is_edit is defined and is_edit == true %}
    {% set title = 'Обновить желание' %}
    {% set button = 'Обновить желание' %}
{% else %}
    {% set title = 'Новое желание' %}
    {% set button = 'Добавить желание' %}

{% endif %}

{% block title %}{{ title }}{% endblock %}
{% block h1 %}{{ title }}{% endblock %}

{% block body %}

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.title) }}
            {{ form_widget(form.title) }}
            {{ form_errors(form.title) }}
        </div>
        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
            {{ form_errors(form.description) }}
        </div>
        <div class="form-group image-content">
            {{ form_label(form.image) }}
            {% if image is defined and image != null %}
                <br/>
                <img src="{{ asset('uploads/') ~ image }}" alt="">
                <br/><br/>
            {% endif %}
            {{ form_widget(form.image) }}
            {{ form_errors(form.image) }}
        </div>
        <button type="submit" class="btn btn-primary">{{ button }}</button>
    {{ form_end(form) }}
{% endblock %}