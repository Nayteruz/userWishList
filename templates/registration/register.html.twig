{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}
{% block h1 %}Регистрация{% endblock %}

{% block body %}

    <form action="{{ path('app_register') }}" method="post">
        {{ form_start(registrationForm) }}
        <div class="form-group">
            <label>{{ form_label(registrationForm.email) }}</label>
            {{ form_widget(registrationForm.email) }}
            {{ form_errors(registrationForm.email) }}
        </div>
        <div class="form-group">
            <label>{{ form_label(registrationForm.name) }}</label>
            {{ form_widget(registrationForm.name) }}
        </div>
        {#        {{ form_row(registrationForm.agreeTerms) }}#}
        <div class="form-group">
            <label>{{ form_label(registrationForm.plainPassword) }}</label>
            {{ form_widget(registrationForm.plainPassword) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>
        <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
        {{ form_end(registrationForm) }}
    </form>
{% endblock %}
